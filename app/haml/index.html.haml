      /       %a.oahu_btn.btn.twitter{ "data-oahu-action"=>"ui.share", "data-oahu-provider"=>"twitter"} Share on Twitter
      /     .span4
      /       %iframe{:src=>"//www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.oahu.fr&amp;send=false&amp;layout=standard&amp;width=450&amp;show_faces=true&amp;action=like&amp;colorscheme=light&amp;font&amp;height=80", :scrolling=>"no", :frameborder=>'no', :style => "border:none; overflow:hidden; width:100%; height:200px;", :allowTransparency=>'true' }
      /     .span4
      /       %a.twitter-follow-button{:href=>"https://twitter.com/hullapp", "data-show-count"=>"false", "data-size"=>"large"} Follow @hullapp
      /       %a.twitter-mention-button{:href=>"https://twitter.com/intent/tweet?screen_name=hullapp&text=How%20are%20you%20doing%2C%20", 'data-size'=>'large'} Tweet to @hullapp

      %section#about
        .row
          #clients.span3.clearfix
            .page-header
              %h1 Clients
            %p.universal Universal
            %p.pathe Pathé
            %p.orange Orange
            .clearfix
          #pmd.span3.clearfix
            .page-header
              %h1 Preferred Marketing Developer
            %p Our product has been awarded the Facebook Preferred Marketing Developer badge for the Apps section.
            %a{:href=>'https://developers.facebook.com/preferredmarketingdevelopers/', :target=>'_blank'}
            %img{:src=> '/assets/img/pmd.png'}
          #contact.span3
            .page-header
              %h1 Contact
            %h2
              Oahu is currently
              %br
              a private service.
            %p
              We plan on opening access to more clients in the near future. In the meantime, you can get more information by contacting us.
            .contact
              %a.btn.btn-large{:href=>'mailto:contact@oahu.fr'} contact@oahu.fr
            %p
              %a.btn.btn-large.btn-primary{:href=>'https://twitter.com/hullapp'} Follow @hullapp
          #jobs.span3
            .page-header
              %h1 Jobs
            %h2 We're  currently looking for : 
            %p
              %ul.unstyled
                %li — A front-end developer who knows CSS3, responsive design and Coffeescript perfectly.
                %li — A product manager with a strong focus on detail and user experience
            .jobs
              %a.btn.btn-large{:href=>'mailto:jobs@oahu.fr'} jobs@oahu.fr
            %iframe{:src=>"//www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.oahu.fr&amp;send=false&amp;layout=standard&amp;width=450&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=80", :scrolling=>"no", :frameborder=>'no', :style => "border:none; overflow:hidden; width:100%; height:150px;", :allowTransparency=>'true' }


